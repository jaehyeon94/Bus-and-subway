<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/bus_metro_layout_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/stationlinear"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_margin="15dp"
        android:clickable="true">

        <LinearLayout
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/s_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:gravity="left"
                android:text="출발역 -> "
                android:textSize="20dp" />

            <TextView
                android:id="@+id/total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/lobster"
                android:gravity="left"
                android:text="(걸리는 시간 : "
                android:textSize="20dp" />

            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출발 시간 : "
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/s_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="도착시간  : "
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/e_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textSize="18dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="환승 : "
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/transfer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00번"
                        android:textSize="18dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/s_info_time"
                android:layout_width="85dp"
                android:layout_height="50dp"
                android:background="@drawable/back"
                android:fontFamily="@font/lobster"
                android:gravity="center"
                android:text="출발 시간"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:background="@drawable/aa" />

            <TextView
                android:id="@+id/s_info_name"
                android:layout_width="248dp"
                android:layout_height="50dp"
                android:background="@drawable/back"
                android:fontFamily="@font/lobster"
                android:gravity="center|left"
                android:text=" 출발 역"
                android:textColor=" #0000FF "
                android:textSize="20dp" />


        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="480dp"
    android:orientation="vertical">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_info_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</LinearLayout>
        <Button
            android:id="@+id/start_1"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작"/>

    </LinearLayout>
</LinearLayout>